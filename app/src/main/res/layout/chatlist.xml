<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:id="@+id/rtlInfoWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background3">
            <ImageView
                android:id="@+id/iconmess"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/tvWeatherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="UIT REMOTE"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ImgTemper"
                android:text="Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWeatherName"
                android:layout_alignLeft="@+id/tvWeatherName"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>